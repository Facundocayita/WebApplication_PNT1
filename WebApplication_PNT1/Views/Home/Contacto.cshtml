@{
    ViewData["Title"] = "Contacto";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Tu Proyecto</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('~/Images/Logo_Naranja_SinTexto.jpeg');
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            color: #343a40;
        }

        .contact-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: rgba(248, 249, 250, 0.85); /* Fondo semi-transparente */
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .contact-header {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2em;
            color: #343a40;
        }

        .contact-info {
            font-size: 1.1em;
            margin-bottom: 15px;
            color: #343a40;
        }

            .contact-info i {
                margin-right: 10px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="contact-container">
            <h1 class="contact-header">Contacto</h1>
            <p class="contact-info"><i class="fas fa-phone"></i> +5491125447634</p>
            <p class="contact-info"><i class="fas fa-phone"></i> +541125447634</p>
            <p class="contact-info"><i class="fas fa-envelope"></i> plasticmonkey3d@gmail.com</p>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>