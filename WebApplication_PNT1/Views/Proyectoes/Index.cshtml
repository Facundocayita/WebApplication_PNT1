@model IEnumerable<WebApplication_PNT1.Models.Proyecto>

@{
    ViewData["Title"] = "Index";
}

<h2>Proyectos</h2>

<p>
    <a asp-action="Create" class="btn btn-apple-green">CREAR NUEVO</a>
</p>
<table class="table table-striped table-bordered text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ancho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Groso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantColores)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoUnitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ancho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Groso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantColores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
             <strong>@Html.DisplayFor(modelItem => item.CostoUnitario)</strong>
             </td>
             <td>
              <strong>@Html.DisplayFor(modelItem => item.CostoTotal)</strong>
              </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProyecto">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdProyecto">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProyecto">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<style>
    .btn-apple-green {
        background-color: #8DB600;
        color: white;
        border: none;
    }

        .btn-apple-green:hover {
            background-color: #7AA300;
        }

    .table th, .table td {
        vertical-align: middle;
    }

    .text-center {
        text-align: center;
    }
</style>
