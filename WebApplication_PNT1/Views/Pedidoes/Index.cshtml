@model IEnumerable<WebApplication_PNT1.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos</h1>


<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.DireccionEntrega)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.FechaEntrega)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Proyecto)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.TipoEntrega)
            </th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Cliente)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.DireccionEntrega)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FechaEntrega)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Proyecto.Descripcion)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.TipoEntrega)
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.IdPedido">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdPedido">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdPedido">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-apple-green {
        background-color: #8DB600;
        color: white;
        border: none;
    }

        .btn-apple-green:hover {
            background-color: #7AA300;
        }

    .table {
        width: 100%;
        margin: 20px 0;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table thead th {
            background-color: #343a40;
            color: white;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(3, 65, 45, 0.05);
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

        .table-bordered th, .table-bordered td {
            border: 1px solid #dee2e6;
        }
</style>