            @Html.DisplayFor(model => model.Proyecto.Descripcion)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.TipoEntrega)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.TipoEntrega)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.FechaEntrega)
