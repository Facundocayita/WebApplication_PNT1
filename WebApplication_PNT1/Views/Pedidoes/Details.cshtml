@model WebApplication_PNT1.Models.Pedido

@{
    ViewData["Title"] = "Details";
}

<h2>Detalle</h2>

<div class="details-container">
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Cliente)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.DireccionEntrega)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.DireccionEntrega)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.FechaEntrega)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.FechaEntrega)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Observaciones)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Observaciones)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Proyecto)
        </dt>
